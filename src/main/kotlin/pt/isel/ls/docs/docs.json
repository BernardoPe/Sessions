{
  "openapi": "3.1.0",
  "info": {
    "title": "Sessions API",
    "description": "API for managing game sessions",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/players": {
      "post": {
        "summary": "Create a new player",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                      "type": "string"
                  }
                },
                "required": [
                  "name",
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Player created successfully",
            "content": {
              "application/json": {
                "schema": null
              }
            }
          }
        }
      }
    },
    "/players/{pid}": {
      "get": {
        "summary": "Get player details",
        "parameters": [
          {
            "name": "pid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player details retrieved successfully",
            "content": {
              "application/json": {
                "schema": null
              }
            }
          }
        }
      }
    },
    "/games": {
      "post": {
        "summary": "Create a new game",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "developer": {
                    "type": "string"
                  },
                  "genres": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Game created successfully",
            "content": {
              "application/json": {
                "schema": null
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get list of games",
        "responses": {
          "200": {
            "description": "List of games retrieved successfully",
            "content": {
              "application/json": {
                "schema": null
              }
            }
          }
        }
      }
    },
    "/games/{gid}": {
      "get": {
        "summary": "Get game details",
        "parameters": [
          {
            "name": "gid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game details retrieved successfully",
            "content": {
              "application/json": {
                "schema": null
              }
            }
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "summary": "Create a new session",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "capacity": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "date": {
                    "type": "string"
                  },
                  "gid": {
                    "type": "integer",
                    "format": "int32"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Session created successfully",
            "content": {
              "application/json": {
                "schema": null
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get list of sessions",
        "responses": {
          "200": {
            "description": "List of sessions retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "sid": {
                        "type": "integer",
                        "format": "int32"
                      },
                      "capacity": {
                        "type": "integer",
                        "format": "int32"
                      },
                      "date": {
                        "type": "string"
                      },
                      "gid": {
                        "type": "integer",
                        "format": "int32"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sessions/{sid}": {
      "get": {
        "summary": "Get session details",
        "parameters": [
          {
            "name": "sid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Session details retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sid": {
                      "type": "integer",
                      "format": "int32"
                    },
                    "capacity": {
                      "type": "integer",
                      "format": "int32"
                    },
                    "date": {
                      "type": "string"
                    },
                    "gid": {
                      "type": "integer",
                      "format": "int32"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Add player to session",
        "parameters": [
          {
            "name": "sid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "pid",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player added to session successfully",
            "content": {
              "application/json": {
                "schema": null
              }
            }
          }
        }
      }
    }
  }
}